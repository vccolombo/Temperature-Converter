<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="com.github.vccolombo.temperatureconverter.ui.converter.fragment.ConverterViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/converter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.converter.fragment.ConverterFragment">

        <com.google.android.material.textfield.TextInputLayout android:layout_width="128dp"
                                                               android:layout_height="wrap_content"
                                                               android:id="@+id/editText"
                                                               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                               android:layout_marginTop="64dp"
                                                               app:layout_constraintTop_toTopOf="parent"
                                                               app:layout_constraintEnd_toStartOf="@+id/to_spinner"
                                                               android:layout_marginEnd="8dp"
                                                               app:layout_constraintStart_toEndOf="@+id/from_spinner"
                                                               android:layout_marginStart="8dp">
            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="@={viewModel.valueToConvert}"
                                                                     android:inputType="numberSigned|numberDecimal"
                                                                     android:gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/from_spinner"
                 android:entries="@array/temperature_units"
                 android:selectedItemPosition="@={viewModel.fromUnit}"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="16dp"
                 app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintEnd_toStartOf="@+id/button"
                 android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="32dp"/>

        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/to_spinner"
                 android:entries="@array/temperature_units"
                 android:selectedItemPosition="@={viewModel.toUnit}"
                 android:spinnerMode="dropdown"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="16dp"
                 app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintStart_toEndOf="@+id/button"
                 android:layout_marginStart="8dp" android:layout_marginEnd="32dp"
                 app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/button"
                android:onClick="@{() -> viewModel.onClickConvertButton()}"
                android:text="Convert"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/conversion_result" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/conversion_result"
                  android:text="@{viewModel.conversionResult}"
                  android:gravity="center"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp"
                  android:layout_marginBottom="324dp" app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
